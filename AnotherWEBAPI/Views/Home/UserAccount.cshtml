@{
    ViewBag.Title = "UserAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {

    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/UserAccount.js"></script>
}
<div ng-app="demoModule" id="body">
    <div ng-controller="userAccountCtrl">
        <h2>UserAccount CRUD Operations</h2>

        <h3>List of User Accounts</h3>

        <table ng-cloak>
            <thead>
                <tr>
                    <th style="display: none;">ID</th>
                    <th>Name</th>
                    <th>Adress</th>
                    <th>Postal</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="Users in UserAccounts">
                    <td hidden="hidden">{{users.Id}}</td>
                    <td>{{users.Name}}</td>
                    <td>{{users.Address}}</td>
                    <td>{{users.Postal}}</td>
                    <td>{{users.Email}}</td>
                    <td>
                        <button ng-model="$scope.UserAccount"
                                ng-click="edit(usersData[$index])">
                            Edit
                        </button>
                        <button ng-click="delete($index)">Delete</button>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6">
                        <hr />
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        <br />
        <div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>

        <div ng-show="UserAccount.Id != '' ">
            <div>
                <h2>Update User Account</h2>
            </div>
            <div hidden="hidden">
                <label for="id">Id</label>
                <input type="text" data-ng-model="UserAccount.Id" />
            </div>
            <div>
                <label for="name">Name</label>
                <input type="text" data-ng-model="UserAccount.Name" />
            </div>

            <div>
                <label for="address">Address</label>
                <input type="text" data-ng-model="UserAccount.Address" />
            </div>

            <div>
                <label for="postal">Postal</label>
                <input type="text" data-ng-model="Product.Postal" />
            </div>
            <br />
            <div>
                <button data-ng-click="update()">Update</button>
                <button data-ng-click="cancel()">Cancel</button>
            </div>
        </div>

        <div ng-hide="UserAccount.Id != '' ">
            <div>
                <h2>Add New UserAccount</h2>
            </div>
            <div>
                <label for="name">Name</label>
                <input type="text" data-ng-model="UserAccount.Name" />
            </div>

            <div>
                <label for="address">Address</label>
                <input type="text" data-ng-model="UserAccount.Address" />
            </div>

            <div>
                <label for="postal">Postal</label>
                <input type="text" data-ng-model="UserAccount.Postal" />
            </div>
            <br />
            <div>
                <button data-ng-click="save()">Save</button>
                <button data-ng-click="clear()">Clear</button>
            </div>
        </div>
    </div>
</div>